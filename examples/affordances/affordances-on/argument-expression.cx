package main
import "aff"

func predArg (arg aff.Argument) (res bool) {
	// accept only i32 arguments
	if arg.Type == "i32" {
		res = true
	}
}

func main () {
	var foo i32
	
	tgt := #{
		expr(targetExpr)
		inp(1)
	}

	fltrs := #{
		filter(predArg)
	}
	
	elts := aff.query(fltrs)

	aff.on(elts, tgt)
	
	aff.inform(elts, 2, tgt)

targetExpr:
	foo = i32.add(5, 6)

	i32.print(foo)
}
