package main

var inputs [4]i64
 
var t [10]i32
 
func luhn(s i64) (out bool) {
	count := len(s)
    odd := i32.bitand(count, 1)
    var sum i32
	for i:=0; i < count; i++ {
        if s[i] < '0' || s[i] > '9' {
            return false
        }
        if i&1 == odd {
            sum += t[s[i]-'0']
        } else {
            sum += i32(s[i] - '0')
        }
    }
    return sum%10 == 0
}
 
func main() {
	// initial inputs array
	inputs[0] = 49927398716
	inputs[1] = 49927398717
	inputs[2] = 1234567812345678
	inputs[3] = 1234567812345670

	// intial value for t array
	t[0] = 0
	t[1] = 2
	t[2] = 4
	t[3] = 6
	t[4] = 8
	t[5] = 1
	t[6] = 3
	t[7] = 5
	t[8] = 7
	t[9] = 9
	
    for i := 0; i < len(inputs); i++ {
        printf("%d is luhn: %d\n", inputs[i], luhn(inputs[i]))
    }
}
