			p1y = i32.add(p1y, -1)
			return
		}
	}
	if and(i32.eq(key, 263), i32.eq(action, 1)) {
		i := map2Dto1D(i32.add(p1x, -1), p1y, size)
		idx := []i32.read(foreground, i)
		obj := getSprite(idx)
		if obj.isObstacle {
			return
		}
		
		if i32.lteq(p1x, 0) {
			p1x = 0
			return
		} else {
			p1x = i32.add(p1x, -1)
			return
		}
	}
	if and(i32.eq(key, 262), i32.eq(action, 1)) {
		i := map2Dto1D(i32.add(p1x, 1), p1y, size)
		idx := []i32.read(foreground, i)
		obj := getSprite(idx)
		if obj.isObstacle {
			return
		}
		
		if i32.gteq(p1x, i32.sub(size, 1)) {
			p1x = i32.sub(size, 1)
			return
		} else {
			p1x = i32.add(p1x, 1)
			return
		}
	}
