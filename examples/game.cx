func map2Dto1D (c i32, r i32, w i32) (i i32) {
	r = i32.sub(i32.sub(w, 1), r)
	i = i32.add(i32.mul(w, r), c)
}

func map1Dto2D (i i32, w i32) (c i32, r i32) {
	r = i32.sub(i32.sub(w, 1), i32.div(i, w))
	c = i32.mod(i, w)
}

