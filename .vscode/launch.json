    "version": "0.2.0",
    "configurations": [

        {
            "name": "CMD_CX",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "linux": {
                "program": "./bin/cx",
            },
            "osx": {
                "program": "./bin/cx",
            },
            "windows": {
                "program": "./bin/cx.exe",
            },
            "preLaunchTask": "CMD_CX",
            "showLog": true,
            "args": [
                "--version",
                "--cxpath", "./tests/test-workspace",
            ],
        },
        {
            "name": "CMD_CXTEST",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "linux": {
                "program": "./bin/cxtests",
            },
            "osx": {
                "program": "./bin/cxtests",
            },
            "windows": {
                "program": "./bin/cxtests",
            },
            "preLaunchTask": "CMD_CXTEST",
            "showLog": true,
            "args": [
                "--cxpath=../bin/cx",
                "--wdir=./tests",
                "--log=fail,stderr",
                "--disable-tests=gui"
            ],
        },
        {
            "name": "TEST",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "linux": {
                "program": "./bin/cx",
            },
            "osx": {
                "program": "./bin/cx",
            },
            "windows": {
                "program": "./bin/cx.exe",
            },
            "preLaunchTask": "TEST",
            "showLog": true,
            "args": [
                "--cxpath", "./tests/test-workspace",
                "./tests/test-slices.cx" 
            ],
        },
        {
            "name": "CXFX",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "linux": {
                "program": "./bin/cx",
            },
            "osx": {
                "program": "./bin/cx",
            },
            "windows": {
                "program": "./bin/cx.exe",
            },
            "preLaunchTask": "CXFX",
            "showLog": true,
